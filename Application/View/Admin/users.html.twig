{% extends "Admin/Core/coreback.html.twig" %}

{% block page %}

<h2><a href="#">Users</a> &raquo; <a href="#" class="active">Manage users</a></h2>

<div id="main">

	<h3>Manage users:</h3>
	<table cellpadding="0" cellspacing="0">

		
	{% for user in users %}
			<tr class="{{ cycle(['even','odd'],loop.index) }}">
				<td>{{ user.username }}</td>
				<td class="action">
					<a href="#" class="view">View</a>
					<a href="#" class="edit">Edit</a>
					<a href="#" class="delete">Delete</a>
				</td>
			</tr> 
	{% endfor %}
	</table>

	<h3>Add user:</h3>

	<fieldset>

		<form action="" method='post' class="jNice">

			<p>
				<label>Username:</label>
				<input name="user" type="text" class="text-long" />
			</p>
			<p>
				<label>Password:</label>
				<input name="pass" type="password" class="text-long" />
			</p>
			<p>
				<label>Email:</label>
				<input name="email" type="text" class="text-long" />
			</p>
			<p>
				<label>Role:</label>
				<select name="role">
					<option value="0">User</option>
					<option value="1">Administrator</option>

				</select>
			</p>
			<input type="submit" value="Add homepage" />
		</form>
	</fieldset>

</div>
{% endblock %}