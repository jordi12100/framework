<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>Jordi Kroon - {% block title %}Home{% endblock %}</title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width, initial-scale=1">	
		<link rel="stylesheet" href="{{ base_path() }}templates/main/css/main.css">
		<link rel="stylesheet" href="{{ base_path() }}pygments/manni/highlight.css">
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-54303192-1', 'auto');
		  ga('send', 'pageview');
		  

		</script>
	</head>
	<body>

		<div id="header">

			<div id="nav">
				<div class="container">
					<a href="{{ base_path() }}auth/login" id="loginButton">Login area</a>
					<div>
						{{ render('Menu_Menu:getItems') }}

					</div>
				</div>
			</div>

			<div id="headerbox">
				<div class="container">
					{{ render('Home_Top:index')}}
					
				</div>

				<div class="clear"></div>
			</div>

		</div>

		<div id="main">

			<div class="container">
				<h2>{% block contenttitle %}My Projects{% endblock %}</h2>
				<hr />
				{% block content %}{% endblock %}
				
			</div>

			<div id="footer">
				<div class="container">

					<div id="social">

						<a href="http://github.com/jordi12100"><img src="{{ base_path() }}templates/main/img/social-github.jpg" title="github" alt="github profile"  width="35" height="35"/></a>
						<a href="http://twitter.com/jordi12100"><img src="{{ base_path() }}templates/main/img/social-twitter.jpg" title="twitter" alt="twitter profile"  width="35" height="35"/></a>
						<a href="http://facebook.com/jordi.kroon"><img src="{{ base_path() }}templates/main/img/social-facebook.jpg" title="facebook" alt="facebook profile" width="35" height="35" /></a>
					</div>
					<p>
						&copy; Copyright 2014 - Designed and developed by Jordi Kroon
					</p>

				</div>
			</div>
		</div>
	</body>
</html>
